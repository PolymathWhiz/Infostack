  <div class="col-sm-4">
    <div class="panel panel-card">
      <div class="r-t pos-rlt" md-ink-ripple style="background:url(images/wallx.png) center center; background-size:cover;display: block;">
        <div class="p-lg bg-white-overlay text-center r-t">
          <a href class="w-xs inline">
            <%= image_tag 'pm.svg', alt: '...', class: 'img-circle img-responsive' %>
